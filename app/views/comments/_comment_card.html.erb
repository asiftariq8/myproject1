<div class="card mb-2 p-2" id="<%= dom_id(comment) %>">
  <strong><%= comment.user.email %></strong>:
  <p><%= comment.content %></p>

        <% if comment.image.attached? %>
    <div class="text-center my-2">
        <%= image_tag comment.image, class: "img-thumbnail", style: "max-height: 150px; object-fit: contain;" %>
    </div>
    <% end %>

        <% if comment.user == current_user %>
        <div class="mt-1">
        <%= link_to "Edit", edit_product_comment_path(comment.product, comment), remote: true, class: "btn btn-outline-secondary btn-sm" %>

        <%= link_to "Delete", product_comment_path(comment.product, comment),
                    method: :delete,
                    remote: true,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-outline-danger btn-sm" %>
        </div>
        <% end %>
</div>
