<% comments.each do |comment| %>
  <div class="card mb-2 p-2">
    <strong><%= comment.user.email %></strong>:
    <p><%= comment.content %></p>
    <% if comment.image.attached? %>
      <%= image_tag comment.image, class: "img-fluid rounded", style: "max-height: 200px;" %>
    <% end %>

    <% if comment.user == current_user %>
      <div class="mt-1">
        <%= link_to "Edit", edit_product_comment_path(comment.product, comment), data: { turbo_frame: "modal" }, class: "btn btn-outline-secondary btn-sm" %>
        <%= link_to "Delete", product_comment_path(comment.product, comment), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% end %>
  </div>
<% end %>
