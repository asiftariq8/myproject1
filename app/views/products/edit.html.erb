<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h3 class="card-title text-center mb-4">Edit Product</h3>

          <%= form_with model: @product, local: true, html: { multipart: true } do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :price, class: "form-label" %>
              <%= f.number_field :price, step: 0.01, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :description, class: "form-label" %>
              <%= f.text_area :description, rows: 3, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :category, class: "form-label" %>
              <%= f.select :category, Product.categories.keys.map { |c| [c.titleize, c] }, {}, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :images, "Upload New Images", class: "form-label" %>
              <%= f.file_field :images, multiple: true, class: "form-control" %>
            </div>

            <% if @product.images.attached? %>
              <div class="mb-3">
                <label class="form-label">Current Images:</label>
                <div class="row g-2">
                  <% @product.images.each do |image| %>
                    <div class="col-4">
                      <%= image_tag url_for(image), class: "img-fluid rounded shadow-sm", style: "height: 120px; object-fit: cover;" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="text-center mb-3">
                <%= image_tag "placeholder.png", class: "img-fluid rounded shadow-sm", style: "height: 120px; object-fit: cover;" %>
              </div>
            <% end %>

            <div class="d-grid">
              <%= f.submit "Update Product", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
